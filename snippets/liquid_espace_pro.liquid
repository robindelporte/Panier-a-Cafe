{% assign client_tag = '' %}

{% if customer.tags contains 'PME' %}
  {% assign client_tag = 'PME' %}
{% elsif customer.tags contains 'CHR' %}
  {% assign client_tag = 'CHR' %}
{% elsif customer.tags contains 'Revendeurs Bio' %}
  {% assign client_tag = 'Revendeurs Bio' %}
{% elsif customer.tags contains 'Revendeurs' %}
  {% assign client_tag = 'Revendeurs' %}
{% endif %}

{% assign access_ok = client_tag == collection.metafields.custom.professionel.value %}

<p>Client tag : {{ client_tag }}</p>
<p>Tag collection : {{ collection.metafields.custom.professionel.value }}</p>
<p>Accès autorisé ? {{ access_ok }}</p>
