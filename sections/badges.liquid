<style>
  .badges_content {
    display: flex;
     flex-direction: column;
     flex-wrap: nowrap;
     grid-column-gap: 0.25rem;
     grid-row-gap: 0.25rem;
     text-align: center
  }
  .padding-section-medium {
    padding-top: 4.875rem;
     padding-bottom: 4.875rem
  }
  .padding-section-medium.medium {
    padding-top: 4rem;
     padding-bottom: 4rem
  }
  @media screen and (max-width: 767px) {
    .padding-section-medium {
      padding-top: 3rem;
       padding-bottom: 3rem
    }
  }
  .badges_list {
    display: flex;
     margin-top: 0rem;
     margin-bottom: 0rem;
     padding-left: 0rem;
     flex-direction: row;
     justify-content: center;
     flex-wrap: wrap;
     align-items: center;
     grid-column-gap: 2rem;
     grid-row-gap: 3rem
  }
  .badges_icon {
    width: 4rem;
     height: 4rem
  }
  .badges_item {
    display: flex;
     width: 22%;
     margin-top: 0rem;
     margin-right: 0rem;
     margin-bottom: 0rem;
     margin-left: 0rem;
     padding-left: 0rem;
     flex-direction: column;
     justify-content: flex-start;
     flex-wrap: nowrap;
     align-items: center;
     grid-column-gap: 1.5rem;
     grid-row-gap: 1.5rem
  }
  .container-large {
    width: 100%;
     max-width: 80rem;
     margin-right: auto;
     margin-left: auto
  }
  .text-font-body {
    font-family: Fustat
  }
  .padding-global {
    padding-right: 5%;
     padding-left: 5%}
  .badges_heading {
    text-align: center
  }
  .badges_component {
    display: flex;
     flex-direction: column;
     flex-wrap: nowrap;
     grid-column-gap: 3rem;
     grid-row-gap: 3rem
  }
  .text-size-large {
    font-size: 1.625rem;
     line-height: 1.2;
     letter-spacing: -0.5px
  }
  @media screen and (max-width: 767px) {
    .text-size-large {
      font-size: 1.125rem
    }
  }
</style>
<div class="padding-global">
  <div class="padding-section-medium">
    <div class="container-large">
      <div class="badges_component">
        <div class="badges_heading">
          <h2>
            {{ section.settings.text_titre }}
          </h2>
        </div>
        <ul class="badges_list">
          {% for block in section.blocks %}
            {% if block.type == 'badge' %}
              <li class="badges_item" li-block="Badge">
                <img
                  class="badges_icon"
                  width="auto"
                  height="auto"
                  alt="{{ block.settings.image_image.alt }}"
                  src="{{ block.settings.image_image | img_url: 'master' }}"
                  loading="lazy"
                >

                <div class="badges_content">
                  <h3 class="text-size-large text-font-body text-weight-bold">
                    {{ block.settings.text_heading }}
                  </h3>
                  <p>
                    {{ block.settings.text_texte }}
                  </p>
                </div>

                <a href="{{ block.settings.url_lien }}"> {{ block.settings.text_texte }} </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
{% schema %} {"tag":"section","name":"Badges","class":"section_badges","blocks":[{"name":"Badge","type":"badge","settings":[{"id":"image_image","type":"image_picker","label":"Image"},{"id":"text_heading","type":"text","label":"Heading","default":"\n                    Heading\n                "},{"id":"text_texte","type":"text","label":"Texte","default":"\n                    Nous achetons une grande partie de nos caf\u00e9s en direct.\n                "},{"id":"url_lien","type":"url","label":"Lien"}]}],"settings":[{"id":"text_titre","type":"text","label":"Titre","default":"\n                Heading\n            "}],"presets":[{"name":"Badges","category":"Liquify","blocks":[{"type":"badge"}]}]} {% endschema %}
