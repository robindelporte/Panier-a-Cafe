<div class="padding-global padding-section-medium">
          <div class="container-large">
            <div class="product_component">
              <div class="product_heading">
                <h2 class="heading-style-h2">
{{ section.settings.text_headline }}
</h2>
              </div>
              <div class="splide slider">
                <div class="splide__track w-dyn-list">
                  <div role="list" class="splide__list w-dyn-items">
                    {% for product in section.settings.collection_collection.products limit: section.settings.collection_collection_limit %}
<div role="listitem" class="splide__slide w-dyn-item">
    
                      
    {% render 'product_item', product: product %}
    
                    
</div>
{% endfor %}
                  </div>
                  <div class="hide w-dyn-empty">
                    <div>No items found.</div>
                  </div>
                </div>
              </div>
              <div class="button-group is-center">
                <a href="{{ section.settings.url_button_link }}" class="button is-secondary w-button"> {{ section.settings.text_button_text }} </a>
              </div>
            </div>
          </div>
        </div> {% schema %} {
    "tag": "section",
    "name": "Category",
    "class": "section_product",
    "settings": [
        {
            "id": "text_headline",
            "type": "text",
            "label": "Headline",
            "default": "Nos clients ont aussi achet\u00e9"
        },
        {
            "id": "collection_collection",
            "type": "collection",
            "label": "Collection"
        },
        {
            "type": "range",
            "id": "collection_collection_limit",
            "min": 1,
            "max": 99,
            "step": 1,
            "label": "Limit: Collection",
            "default": 6
        },
        {
            "id": "url_button_link",
            "type": "url",
            "label": "Button Link"
        },
        {
            "id": "text_button_text",
            "type": "text",
            "label": "Button Text",
            "default": "En voir plus"
        }
    ],
    "presets": [
        {
            "name": "Category",
            "category": "Liquify",
            "blocks": []
        }
    ]
} {% endschema %}