<div class="padding-global padding-section-medium">
          <div class="container-large">
            {% assign currentArticle = article.title %}
            <h2 class="heading-style-h2 text-align-center">
{{ section.settings.text_headline }}
</h2>
            <div class="spacer-large"></div>
            <div class="blog_list-wrapper w-dyn-list">
              <div li-for:inside="article in blog.articles limit: 3" role="list" class="blog_list w-dyn-items">
        {% for article in blog.articles limit: 3 %}                            
                
                            {% if article.title != currentArticle %}    <div li-if="article.title != currentArticle" role="listitem" class="blog_list-item w-dyn-item">
    
                  <a li-object:href="article.url" href="{{ article.url }}" class="blog_item-grid w-inline-block">
                    <div id="w-node-_1efb1bf7-74e3-eb3f-1610-17f7e9f1e675-e9f1e66a" class="blog_tags-wrapper"><img id="w-node-_1efb1bf7-74e3-eb3f-1610-17f7e9f1e676-e9f1e66a" li-object:src="article.image | img_url: 'master'" alt="{{ article.image.alt }}" src="{{ article.image | img_url: 'master' }}" loading="lazy" li-object:alt="article.image.alt" class="blog_img">
                      <div class="blog_tag-row">
                        {% for tag in article.tags %}    <div li-for="tag in article.tags" class="blog_tag">
                                    
                          
                            <div li-object="tag">{{ tag }}</div>
                            
                        
                        </div>
{% endfor %}
                      </div>
                    </div>
                    <div id="w-node-_1efb1bf7-74e3-eb3f-1610-17f7e9f1e67b-e9f1e66a" class="spacer-small"></div>
                    <div class="blog_info-wrapper">
                      <h3 li-object="article.title" class="heading-style-h5">{{ article.title }}</h3>
                      <div>5 min</div>
                    </div>
                  </a>
                    </div>
{% endif %}
                            
              
                    {% endfor %}    </div>
              <div class="hide w-dyn-empty"></div>
            </div>
            <div class="spacer-large"></div>
            <div class="button-group is-center">
              <a href="{{ section.settings.url_bouton_lien }}" class="button is-secondary w-button"> {{ section.settings.text_bouton_texte }} </a>
            </div>
          </div>
        </div> {% schema %} {
    "tag": "section",
    "name": "Related Articles",
    "class": "section_related-articles",
    "settings": [
        {
            "id": "text_headline",
            "type": "text",
            "label": "Headline",
            "default": "Nouveaut\u00e9s du blog"
        },
        {
            "id": "url_bouton_lien",
            "type": "url",
            "label": "Bouton : Lien"
        },
        {
            "id": "text_bouton_texte",
            "type": "text",
            "label": "Bouton : Texte",
            "default": "Voir plus d'articles"
        }
    ],
    "presets": [
        {
            "name": "Related Articles",
            "category": "Liquify",
            "blocks": []
        }
    ]
} {% endschema %}