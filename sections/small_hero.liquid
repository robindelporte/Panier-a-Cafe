<div class="header_background-image-wrapper">
          <div class="header_overlay-layer"></div>
          <div>{% if section.settings.image_image %}
{{ section.settings.image_image | image_url: width: 1000 | image_tag: loading: 'eager', class: 'header_background-image' }}
{% else %}
<img loading="eager" alt="" src="{{ 'placholder-8.svg' | asset_url }}" class="header_background-image">
{% endif %}</div>
        </div>
        <div class="padding-global padding-section-large">
          <div class="container-small">
            <div class="text-align-center">
              <div class="max-width-xlarge align-center">
                <div class="margin-bottom margin-small">
                  <h1 class="heading-style-h1 text-color-white">
{{ section.settings.text_titre }}
</h1>
                </div>
              </div>
            </div>
          </div>
        </div> {% schema %} {
    "tag": "section",
    "name": "Small-Hero",
    "class": "section_small-hero",
    "settings": [
        {
            "id": "image_image",
            "type": "image_picker",
            "label": "Image"
        },
        {
            "id": "text_titre",
            "type": "text",
            "label": "Titre",
            "default": "Nous contacter"
        }
    ],
    "presets": [
        {
            "name": "Small-Hero",
            "category": "Liquify",
            "blocks": []
        }
    ]
} {% endschema %}